<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.example.validator_lib.DoubleValidatorText
        android:layout_width="match_parent"
        android:id="@+id/password"
        android:hint="@string/app_name"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/submit" />

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/first_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:format="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/last_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:format="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:format="4"
        app:layout_constraintTop_toBottomOf="@id/first_name" />


    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/ip_adress"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:format="2"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:format="1"
        app:layout_constraintTop_toBottomOf="@id/ip_adress" />

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/zip_code"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:format="2"
        app:layout_constraintTop_toBottomOf="@id/telephone" />

    <com.example.validator_lib.ValidatorEditText
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="kk"
        app:format="2"
        app:hint="aa"
        app:layout_constraintTop_toBottomOf="@id/zip_code"
        app:text1="" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:text="Submit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/year" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:text="Clear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/year" />


</androidx.constraintlayout.widget.ConstraintLayout>